<h1>Send Order</h1>

<div class="row">
    <div class="col s12">
        <form action="/burgers" method="POST">
            <input type="text" id="name" name="burger_name" placeholder="Order What You Want">
            <button type="submit" class="addBurgerButton">Prepare Meal</button>
        </form>
    </div>
</div>

<h2>Order Up</h2>

<main>
    <div class="container">
        <div class="row">
            <div class="col s6">
                {{#each burgers}}
                    {{#unless this.devoured}}
                        <div class="burgerName">
                            <div class='burgerAvailable'>{{this.name}}</div>
                        </div>

                        <div class="customerEats">
                            <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                            <input type="text" id="customerName" name="customerName" placeholder="Your Name">
                            <button type="submit" class="eatBurgerButton fa fa-cutlery fa-2x" aria-hidden="true"></button>
                            </form>
                        </div>     
                    {{/unless}}
                {{/each}}
            </div> 

            <div class="col s6">
                {{#each burgers}}
                    {{#if this.devoured}}
                        <div class='burgerEaten'>
                            <div>
                                {{this.name}} (eaten by {{this.Customer.name}})
                            </div>
                        </div>
                    {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
</main>

